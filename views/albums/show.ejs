<h1><%= album.title %>'s Detail Page</h1>
<h4>Create a New Song</h4>
<form action="/albums/<%= album.id %>/songs" method="POST">
  <div class="form-group">
    <label for="songTitle">Song Title</label>
    <input type="text" class="form-control" id="songTitle" name="songTitle" />
    <label for="duration">Song Duration</label>
    <input type="text" class="form-control" id="duration" name="duration" />
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
<br>
<form action="/albums/<%= album.id %>?_method=DELETE" method="POST">
  <button type="submit"  class="btn btn-danger">DELETE</button>
</form> 

<h1>Songs</h1>

<ul>
  <% album.songs.forEach(song => { %>
  <li>
    <a href="/albums/<%= album.id %>/songs/<%= song.id %>/edit"><%= song.songTitle %></a
    >
    <form
      action="/albums/<%= album.id %>/songs/<%= song.id %>?_method=DELETE"
      method="POST"
    >
      <button type="submit" class="btn btn-danger btn-sm">Delete</button>
    </form>
  </li>
  <% }) %>
</ul>